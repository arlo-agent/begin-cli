{
  "name": "@beginwallet/cli",
  "version": "0.1.0",
  "description": "The first Cardano CLI wallet designed for AI agents",
  "type": "module",
  "bin": {
    "begin": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cardano",
    "blockchain",
    "cli",
    "ink",
    "wallet"
  ],
  "author": "ArloByte",
  "license": "MIT",
  "dependencies": {
    "@meshsdk/core": "^1.9.0-beta.98",
    "bip39": "^3.1.0",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^18.3.12",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ]
}
